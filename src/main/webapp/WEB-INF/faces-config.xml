<?xml version="1.0" encoding="UTF-8"?>

<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd"
    version="2.1">
    
    <component>
		<component-type>org.primefaces.component.FileUpload</component-type>
		<component-class>com.util.auxiliares.NonTransientFileUpload</component-class>
	</component>
    
    <application>
    	<el-resolver>
    		org.springframework.web.jsf.el.SpringBeanFacesELResolver
    	</el-resolver>
  	</application>
	<render-kit>
	    <renderer>
	        <component-family>org.primefaces.component</component-family>
	        <renderer-type>org.primefaces.component.FileUploadRenderer</renderer-type>
	        <renderer-class>com.fileupload.FileUploadRenderer</renderer-class>
	    </renderer>
	</render-kit>
</faces-config>
